solver
{
    type Newmark;
}

accelerationRelaxation table
			(
			(0	0)
			(10	0)
			(20	0.15)
			(50	0.3)
			(100	0.3)
			);

bodies
{
    Carena
    {
        type            rigidBody;
        parent          root;

        centreOfMass    (0 0 0);
        mass            14525;
        inertia         (40 0 0 262400 0 262400);
        
        transform       (1 0 0 0 1 0 0 0 1) (5.37 0 0.5);

        joint
        {
            type    composite;
            joints
            (
                {
                    type Pz;
                }
                {
                    type Ry;
                }
            );
        }

        patches         (Carena);
        innerDistance   1;
        outerDistance   5;
    }
}

constraints
{
    zAxis
    {
        rigidBodyMotionConstraint line;
        direction     (0 0 1);
    }

    yPlane
    {
        rigidBodyMotionConstraint axis;
        axis          (0 1 0);
    }
}

restraints
{
    translationDamper
    {
        type linearDamper;
        body Carena;
        coeff 8596;
    }

    rotationDamper
    {
        type sphericalAngularDamper;
        body Carena;
        coeff 11586;
    }
}


