FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "initialConditions"

application     interFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         $endTimeSim;

deltaT          $deltaTime;

writeControl    adjustableRunTime;

writeInterval   1;

purgeWrite      0;

writeFormat     binary;  //ascii or binary

writePrecision  6;

//fileHandler     uncollated;    // Critical for ParaView live refresh

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

adjustTimeStep  yes;

maxCo           $maxCo;
maxAlphaCo      $maxAlphaCo;
maxDeltaT       $maxDeltaT;  // (L/U) * 200
 
functions
{
	forces
	{
	type forces;
	libs ("libforces.so");
	patches ("Carena");
	pName p;
	UName U;
	log true;
	rhoName rho;
	rhoInf $rhof; // Reference density, fluid
	CofR ($CoGx 0 $CoGz); // Origin for moment calculations
	writeControl timeStep;
	writeInterval 1;
	}
};

